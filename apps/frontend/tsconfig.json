{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
